---
const links = [
  { href: '/', label: 'Inicio' },
  { href: '/productos', label: 'Productos' },
  { href: '/contacto', label: 'Contacto' }
];
---

<nav class="top-0 left-0 z-50 fixed bg-white shadow-md w-full">
    <div class="mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <a href="/" class="font-bold text-gray-800 text-2xl">Joyería Brillante</a>
  
        <!-- Menú para escritorio -->
        <div class="hidden md:flex space-x-8">
          {links.map(link => (
            <a 
              href={link.href} 
              class="font-medium text-gray-700 hover:text-blue-600 transition"
            >
              {link.label}
            </a>
          ))}
        </div>
  
        <!-- Botón hamburguesa para móviles -->
        <div class="md:hidden">
          <button 
            class="focus:outline-none text-gray-700" 
            id="menu-toggle"
            onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
          >
            ☰
          </button>
        </div>
      </div>
    </div>
  
    <!-- Menú móvil desplegable -->
    <div class="hidden md:hidden px-4 pb-4" id="mobile-menu">
      <ul class="flex flex-col space-y-2 mt-2">
        {links.map(link => (
          <li>
            <a 
              href={link.href} 
              class="block font-medium text-gray-700 hover:text-blue-600"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
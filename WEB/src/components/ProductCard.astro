<section class="relative overflow-hidden">
  <div class="relative w-full h-96"> 
    <img 
      src="/public/conchas.jpg" 
      alt="" 
      class="absolute inset-0 w-full h-full object-cover"
    />

    <!-- Contenedor del texto superpuesto -->
    <div class="top-0 right-0 absolute flex justify-end items-center p-2 w-full md:w-2/5 h-full">
      <div class="max-w-md text-white">
        <h2 class="mb-4 font-serif text-3xl md:text-4xl lg:text-5xl">Summer Kiss collection</h2>
        <p class="mb-6">Descubre nuestra nueva colección de verano</p>
        <a 
          href="/shop" 
          class="inline-block bg-white hover:bg-gray-200 px-6 py-3 text-black text-center transition duration-300"
        >
          SHOP NOW
        </a>
      </div>
    </div>
  </div>
</section>
---
interface Props {
  id: string | number;
  image: string;
  title: string;
  description: string;
  price: string | number;
}

const { id, image, title, description, price } = Astro.props;
const numericPrice = typeof price === "string" ? parseFloat(price) : price;
---

<div class="flex flex-col bg-gray-100 hover:shadow-md p-4 rounded-sm h-full transition-shadow product-card">
  <div class="relative mb-4">
    <img src={image} alt={title} class="w-full h-48 object-contain" />
  </div>

  <div class="flex-grow">
    <h3 class="mb-1 font-medium text-gray-700 text-lg">{title}</h3>
    <p class="mb-2 text-gray-600 text-sm">{description}</p>
  </div>

  <div class="mt-auto">
    <p class="mb-1 font-medium text-gray-700">€{numericPrice.toFixed(2)}</p>

    <button
      class="bg-gray-800 hover:bg-gray-700 add-to-cart-button mt-2 px-4 py-2 rounded w-full text-white text-sm transition-colors-"
      data-id={id}
      data-image={image}
      data-title={title}
      data-descrip={description}
      data-price={numericPrice.toFixed(2)}
    >
      Comprar
    </button>
  </div>
</div>

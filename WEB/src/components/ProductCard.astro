---
interface Props {
  image: string;
  title: string;
  description: string;
  price: string;
}

const { image, title, description, price} = Astro.props;
---

<div class="flex flex-col bg-gray-100 p-4 rounded-sm h-full product-card">
    <div class="relative mb-4">
      <img src={image} alt={title} class="w-full h-48 object-contain">
    </div>
    
    <div class="flex-grow">
      <h3 class="mb-1 font-medium text-lg">{title}</h3>
      <p class="mb-2 text-gray-600 text-sm">{description}</p>
    </div>
    
    <div class="mt-auto">
      <p class="mb-1 font-medium">{price}</p>
      
    </div>
  </div>